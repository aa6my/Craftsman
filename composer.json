{
    "name": "dsv/craftsman",
    "description": "Craftsman Codeigniter CLI provides a number of helpful commands for your use while developing your application. It is driven by the powerful Symfony Console component.",
    "keywords": [
        "codeigniter",
        "codeigniter-craftsman",
        "craftsman",
        "cli",
        "cli-codeigniter"
    ],
    "homepage": "https://github.com/davidsosavaldes/Craftsman",
    "license": "MIT",
    "authors": [
        {
            "name": "David Sosa Valdes",
            "email": "david.sosa.valdes@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "^2.7",
        "symfony/filesystem": "^2.7",
        "symfony/process": "^2.7",
        "twig/twig" : "^1.18"
    },
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "support":{
        "issues": "https://github.com/davidsosavaldes/Craftsman/issues"
    },
    "bin": ["craftsman"],
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "suggest": {
        "dsv/attire": "Attire is an implementation of Twig template engine and Assetic asset management framework for CodeIgniter 3.0."
    }
}
