#!/usr/bin/env php
<?php

use Craftsman\Commands\Generators\Controller;
use Craftsman\Commands\Generators\Model;
use Craftsman\Commands\Generators\Migration;
use Craftsman\Commands\Migrations\Info;
use Craftsman\Commands\Migrations\Version;
use Craftsman\Commands\Migrations\Latest;
use Craftsman\Commands\Migrations\Rollback;
use Craftsman\Commands\Migrations\Reset;
use Craftsman\Commands\Migrations\Refresh;

use Symfony\Component\Console\Application;

/**
 * CLI Codeigniter Crafstman
 *
 * @author     David Sosa Valdes <https://github.com/davidsosavaldes>
 * @license    MIT License
 * @link       https://github.com/davidsosavaldes/Craftsman
 * @copyright  Copyright (c) 2016, David Sosa Valdes.
 */

// Set to run indefinitely if needed
set_time_limit(0);

define('CRAFTSMANPATH', __DIR__.DIRECTORY_SEPARATOR);

// Create a Codeigniter instance
$CI = require CRAFTSMANPATH.'src/ci_instance.php';
// Add the Craftsman extended packages
$CI->load->add_package_path(CRAFTSMANPATH.'src/Extend');
// Set the commands
$commands = array(
	new Migration(),
	new Controller(),
	new Model(),
	new Info($CI),
	new Version($CI),
	new Latest($CI),
	new Rollback($CI),
	new Reset($CI),
	new Refresh($CI)
);

$application = new Application('Craftsman', '3.3.0');
// Add the default commands
foreach ($commands as $key => $command) {
	$application->add($command);
}
$application->run();